<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<table align="center">
    @using(Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Họ tên khách hàng:</td>
            <td>@Html.TextBox("HotenKH")
            @ViewData["Loi1"]
                </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ khách hàng:</td>
            <td>@Html.TextBox("DiachiKH")
            @ViewData["Loi2"]
                </td>
        </tr>
        <tr style="height:40px">
            <td> Điện thoại:</td>
            <td>@Html.TextBox("Dienthoai")
            @ViewData["Loi3"]
                </td>
        </tr>
        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN")
            @ViewData["Loi4"]
                </td>
        </tr>
        <tr style="height:40px">
            <td> Mật khẩu:</td>
            <td>@Html.TextBox("Matkhau")
            @ViewData["Loi5"]
                </td>
        </tr>
        <tr style="height:40px">
            <td> Mật khẩu nhập lại:</td>
            <td>@Html.TextBox("Matkhaunhaplai")
            @ViewData["Loi6"]
                </td>
        </tr>
        
        <tr style="height:40px">
            <td> Ngày sinh:</td>
            <td>
            <input type="date" name="Ngaysinh"/>
            </td>
        </tr>
        
        <tr style="height:40px">
            <td> Giới tính:</td>
            <td>@Html.TextBox("Gioitinh")
            @ViewData["Loi7"]
                </td>
        </tr>
        <tr style="height:40px">
            <td> Email:</td>
            <td>@Html.TextBox("Email")
            @ViewData["Loi8"]
                </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
            <input type="submit" value="Đăng ký"/>
            </td>
        </tr>
    }
</table>

